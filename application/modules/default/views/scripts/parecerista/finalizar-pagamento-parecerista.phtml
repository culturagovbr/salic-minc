<script>

    $(document).ready(function(){

    });

    function concluirPagamento(id){

        var retorno = true;

        //Mandar um alerta de Confirmação
//        return false;

        if(retorno){

            $("#dialog").html('Deseja finalizar o pagamento?');

            $("#dialog").dialog("destroy");
            $("#dialog").dialog({
                width: '400px',
                modal: true,
                draggable: false,
                resizable: false,
                closeOnEscape: false,
                title: 'Confirmação',
                buttons: {
                    Não:function() {
                        $(this).dialog('close');
                    },
                    Sim:function() {
                        $('#form_'+id).submit();
                    }
                }
            });

            $('.ui-dialog-titlebar-close').remove();

        }



    }

    function visualizarPagamentos(id){
        $('tr.pagamento').addClass('sumir');
        $('#tr_'+id).toggleClass('sumir');


        $('#btnAbrir_'+id).hide();
        $('#btnFechar_'+id).show();
    }

    function esconderPagamentos(id){
        $('#tr_'+id).toggleClass('sumir');
        $('#btnAbrir_'+id).show();
        $('#btnFechar_'+id).hide();
    }

</script>
