<script type="text/javascript">
    $(document).ready(function(){
        $("#formaprovacao").validate({
            // Define as regras
            rules:{
                justificativa:{
                    required: true
                }
            },
            messages:{
                justificativa:{
                    required:  "Favor preencher a justificativa de envio da procura&ccedil;&atilde;o!"
                }
            },
            submitHandler: function(form) {
                form.submit();
            }
        });
    });

    function aprovacao(idDocumento, tipoaprovacao) {
        var msg = "";
        if(tipoaprovacao == 1) {
            msg = "Deseja aprovar a procura��o?";
            $("#situacao").val("1");
        } else {
            msg = "Deseja rejeitar a procura��o?";
            $("#situacao").val("0");
        }

        if($('#justificativa').val().length > 300){
            $("#error").html('O campo justificativa deve ter no m�ximo 300 caracteres.');
            $("#error").dialog({
                resizable: true,
                width:320,
                height:180,
                modal: true,
                autoOpen:false,
                closeOnEscape : false,
                title : 'Alerta!',
                buttons: {
                    'Ok': function() {
                        $("#error").dialog('close');
                    }
                }
            });
            $("#error").dialog('open');
        } else {
            $("#confirm").html(msg);
            $("#confirm").dialog({
                resizable: true,
                width:320,
                height:160,
                modal: true,
                autoOpen:false,
                closeOnEscape : false,
                title : 'Alerta!',
                buttons: {
                    'Não': function() {
                        $("#confirm").dialog('close');
                    },
                    'Sim': function() {
                        $("#confirm").dialog('close');
                        $("#formaprovacao").submit();
                    }
                }
            });
            $("#confirm").dialog('open');
        }
    }
</script>
