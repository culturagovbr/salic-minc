    function salvarjustificativa(){
        if($('#justificativa').val()==''){
            $("#confirm1").dialog("destroy");
            $("#confirm1").dialog({
                width:350,
                height:150,
                EscClose:false,
                modal:true,
                buttons:{
                    'OK':function(){
                        $(this).dialog('close');
                        return false;
                    }
                }
            });
            return false;
        } else {
            $("#confirm2").dialog("destroy");
            $("#confirm2").dialog({
                width:350,
                height:150,
                EscClose:false,
                modal:true,
                buttons:{
