<script>
    var isIn2017 =  <?= ($this->in2017); ?>;

    $(document).ready(function (){
        $('.btnAbrirDiv').click(function(){
            var idpronac = '<?php echo $this->idpronac ?>';
            var tipo     = $(this).attr('tipo');
            dadosOb = {
                idpronac : idpronac,
                tipo : tipo
            };

            var idDiv = "#"+tipo;

            if (tipo == 'plano') {
                if (isIn2017) {
                    $(idDiv).toggle('fast');
                    return;
                } else {
                    $(idDiv).html('');
                }
            }

            ajax(dadosOb, tipo);
        });

    });
    function ajax (dadosEnvia, idDiv){
        var dadosEnvia = dadosEnvia;
        var idDiv = "#"+idDiv;
        if($(idDiv).html()==""){
            $.ajax({
                type: "POST",
                url : '<?php echo $this->url(array('controller' => 'dadosprojeto', 'action' => 'ajax')); ?>',
                data: dadosEnvia,
                beforeSend: function(){
                    $("#loader").dialog({
                        resizable: false,
                        width:300,
                        height:160,
                        modal: true,
                        autoOpen:false
                    });
                    $("#loader").dialog('open');
                    $('.ui-dialog-titlebar-close').remove();
                },
                success: function(valores)
                {
                    $("#loader").dialog('close');
                    $(idDiv).html(valores);
                    $(idDiv).toggle('slow');

                }
            });
        }
        else{
        $(idDiv).toggle('slow');
        }
    }

    /**
     * Fun��es para abrir e fechar os elementos ([+] e [-])
     */
    function openIFF(cont) // abre os incentivos fiscais
    {
        $('#icn_mais' + cont).show();
        $('#icn_menos' +  cont + ', .' + cont).hide();
    }
    function closeIFF(cont) // fecha os incentivos fiscais
    {
        $('#icn_menos' +  cont + ', .' + cont).show();
        $('#icn_mais' + cont).hide();
    }
</script>

