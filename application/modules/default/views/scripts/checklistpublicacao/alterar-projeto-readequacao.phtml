                $('#dtfimexecucao').val('<?php echo Data::tratarDataZend($this->projetos->DtFimExecucao, "brasileiro");?>');
                $('#dtinicioexecucao').val('<?php echo Data::tratarDataZend($this->projetos->DtInicioExecucao, "brasileiro");?>');
